<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.my_book_manager_system.mapper.UserMapper">

    <select id="list" resultType="com.example.my_book_manager_system.entity.User">
        select * from user
    </select>

    <select id="listByCondition" resultType="com.example.my_book_manager_system.entity.User">
        select * from user
            <where>
                <if test="username!=null ">username like concat('%',#{username},'%')
                </if>
            </where>

    </select>
</mapper>
